{
  "manifest_version": 3,
  "name": "Untappd Toolbar",
  "version": "1.0.0.11",
  "author": "Chris Shoesmith",
  "description": "A scrolling ticker of Untappd check-ins.",
  "permissions": [
    "storage",
    "offscreen",
    "alarms"
  ],
  "host_permissions": [
    "https://untappd.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
